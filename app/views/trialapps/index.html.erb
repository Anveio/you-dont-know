<% provide(:title, 'All Applications') %>
<h1>All Applications</h1>

<% if @trialapps.any? %>
<%= will_paginate %>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <th>#</th>
      <th>Name</th>
      <th>Server</th>
      <th>Class</th>
      <th>Spec</th>
      <th>Submitted</th>
      <th>Status</th>
    </thead>
    <tbody>
      <% @trialapps.each do |app| %>
      <tr class="<%= trialapp_row_class(app) %>">
        <th scope="row"><%= app.id %></th>
        <td><%= link_to app.character_name, app %></td>
        <td><%= app.server %></td>
        <td><%= app.character_class %></td>
        <td><%= app.spec %></td>
        <td><%= "#{time_ago_in_words(app.created_at)} ago" %></td>
        <td><%= trialapp_status(app) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate %>
<% else %>
  <h4 class="center">No applications yet.</h4>
<% end %>
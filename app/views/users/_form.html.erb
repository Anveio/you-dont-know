    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name, "Username" %>
      <%= f.text_field :name, placeholder: "Visible to Officers.", class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Never visible to anyone.", class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Atleast 6 characters, longer the better.", class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, placeholder: "Same as your password.", class: 'form-control' %>

      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>